<% layout("/layouts/boilerplate") -%>

<body class="bg-light">
  <div class="container py-5">
    <div class="col-lg-6 mx-auto">
      <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-4">
          <h3 class="fw-bold mb-4 text-center text-dark">Add a New Listing</h3>

          <form method="POST" action="/listings">
            <!-- Title -->
            <div class="mb-3">
              <label for="title" class="form-label fw-semibold">Title</label>
              <input
                id="title"
                name="Listing[title]"
                type="text"
                class="form-control rounded-3"
                placeholder="Cozy Mountain Cabin"
                required
              />
            </div>

            <!-- Description -->
            <div class="mb-3">
              <label for="description" class="form-label fw-semibold">Description</label>
              <textarea
                id="description"
                name="Listing[description]"
                rows="4"
                class="form-control rounded-3"
                placeholder="Beautiful cabin with stunning mountain views"
                required
              ></textarea>
            </div>

            <!-- Image URL -->
            <div class="mb-3">
              <label for="imageUrl" class="form-label fw-semibold">Image URL</label>
              <input
                id="image"
                name="Listing[ImageUrl]"
                type="url"
                class="form-control rounded-3"
                placeholder="https://example.com/photo.jpg"
              />
            </div>

            <!-- Price -->
            <div class="mb-3">
              <label for="price" class="form-label fw-semibold">Price (à§³ BDT)</label>
              <input
                id="price"
                name="Listing[price]"
                type="number"
                class="form-control rounded-3"
                placeholder="1100000"
                step="1"
                required
              />
            </div>

            <!-- Location -->
            <div class="mb-3">
              <label for="location" class="form-label fw-semibold">Location</label>
              <input
                id="location"
                name="Listing[location]"
                type="text"
                class="form-control rounded-3"
                placeholder="123 Mountain Rd, Aspen, CO"
                required
              />
            </div>

            <!-- Country -->
            <div class="mb-4">
              <label for="country" class="form-label fw-semibold">Country</label>
              <input
                id="country"
                name="Listing[country]"
                type="text"
                class="form-control rounded-3"
                placeholder="Bangladesh"
                required
              />
            </div>

            <!-- Submit Button -->
            <div class="text-center">
              <button
                type="submit"
                class="btn btn-danger px-4 py-2 rounded-4 fw-semibold"
                style="background-color: #FF385C; border: none;"
              >
                Create Listing
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
